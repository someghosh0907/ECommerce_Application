#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/-S" ]; then
  exec "$basedir/-S" NODE_OPTIONS='--experimental-loader="toast/src/loader.mjs"' node "$basedir/../toast/toast-cli.mjs" "$@"
else 
  exec -S NODE_OPTIONS='--experimental-loader="toast/src/loader.mjs"' node "$basedir/../toast/toast-cli.mjs" "$@"
fi
